@model Quiz.Web.ViewModels.User_VM

@{
    ViewData["Title"] = "User";
    //rollen van de user weergeven.
    string roles = "";
    if(Model.Roles.Count() == 0)
    {
        roles = "None";
    }
    else
    {
        foreach (string role in Model.Roles)
        {
            roles += role + ", ";
        }
        roles = roles.Remove(roles.Length - 2);
    }
}

<h1>User</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            <p>
                @roles
            </p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="IndexUsers">Back to List</a> |
    @Html.ActionLink("Edit roles", "EditRoles", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "DeleteUser", new { id = Model.Id }, new { @class = "text-danger" } ) 
</div>
