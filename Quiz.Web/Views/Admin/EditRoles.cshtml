@model Quiz.Web.ViewModels.EditRoles_VM

@{
    ViewData["Title"] = "EditRoles";
}

<h1>EditRoles</h1>

<div>
    <hr />
    <form asp-controller="Admin" asp-action="EditRoles">
        @Html.HiddenFor(m => m.Id)
        <dl class="row">
            <dt class="col-sm-2">
                Set the roles applicable for  @(Html.DisplayFor(model => model.Name))
            </dt>
            <dd class="col-sm-10">
                @foreach (KeyValuePair<string, bool> role in Model.Roles)
                {
                    <p>
                        @role.Key
                        @Html.CheckBoxFor(model => model.Roles[role.Key])
                    </p>
                }
            </dd>
        </dl>
        <input type="submit" value="Assign selected role to user" class="btn btn-primary" />
    </form>
</div>
<div>
    <a asp-action="IndexUsers">Back to List</a>
</div>
