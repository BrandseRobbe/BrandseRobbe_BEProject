@model IEnumerable<Quiz.Models.Person>
@{
    ViewData["Title"] = "IndexUsers";
    //https://localhost:5001/admin/indexusers
}

<h1>IndexUsers</h1>
<a href="/Identity/Account/Register">Maak een nieuwe gebruiker aan</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Add User To a Role", "AddRoleToUser", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
