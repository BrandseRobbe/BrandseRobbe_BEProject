@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "IndexRoles";
    //https://localhost:5001/admin/IndexRoles
}

<h1>IndexRoles</h1>

@if (!Model.Any())
{
    <p> Er zijn nog geen rollen aangemaakt</p>
    <p> De eerste rol moet nog worden aangemaakt.</p>
    <a asp-action="CreateRole">Add role</a>
}
else
{
    <a asp-action="CreateRole">Add role</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Delete", "DeleteRole", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}